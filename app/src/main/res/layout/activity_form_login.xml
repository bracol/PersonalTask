<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewFormLogin"
    android:layout_width="292dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    fab:cardBackgroundColor="#99000000"
    fab:cardCornerRadius="4dp"
    fab:cardElevation="4dp">


    <LinearLayout
        android:id="@+id/linear_login_register_form"
        android:layout_width="292dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/padding_layout_button"
        android:paddingRight="@dimen/padding_layout_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textinput_size"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewName"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:alpha="0.70"
                android:src="@drawable/ic_social_person" />


            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textinput_size"
                android:paddingLeft="@dimen/padding_edittext_bottom"
                android:paddingRight="@dimen/padding_edittext_bottom"
                android:paddingTop="@dimen/padding_input_top"
                android:theme="@style/EditTextHintLight">

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size"
                    android:hint="@string/prompt_name"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="@dimen/textfield_textsize"
                    android:textColor="@android:color/white"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textinput_size"
            android:gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewUserNameMain"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="12dp"
                android:alpha="0.70"
                android:src="@drawable/ic_action_account_box" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textinput_size"
                android:paddingLeft="@dimen/padding_edittext_bottom"
                android:paddingRight="@dimen/padding_edittext_bottom"
                android:paddingTop="@dimen/padding_input_top"
                android:theme="@style/EditTextHintLight">

                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size"
                    android:gravity="center_vertical"
                    android:hint="@string/prompt_username"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textfield_textsize" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/textinput_size"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="12dp"
                android:alpha="0.70"
                android:src="@drawable/ic_action_lock" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/textinput_size"
                android:paddingLeft="@dimen/padding_edittext_bottom"
                android:paddingRight="@dimen/padding_edittext_bottom"
                android:paddingTop="@dimen/padding_input_top"
                android:theme="@style/EditTextHintLight">

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_size"
                    android:gravity="center_vertical"
                    android:hint="@string/prompt_password"
                    android:imeActionId="@+id/userName"
                    android:imeActionLabel="@string/action_sign_in"
                    android:imeOptions="actionUnspecified"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingTop="@dimen/padding_edittext_top"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textfield_textsize"

                    />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancelFormLogin"
                android:layout_height="36dp"
                android:layout_width="120dp"
                android:gravity="center"
                style="@style/ButtonStyle"
                android:text="@string/action_cancel" />

            <Button
                android:id="@+id/buttonSaveFormLogin"
                android:layout_height="36dp"
                android:layout_width="120dp"
                android:layout_marginLeft="14dp"
                android:gravity="center"
                style="@style/ButtonStyle"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>


