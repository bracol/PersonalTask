<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--<ImageView-->
    <!--android:id="@+id/imageViewLogo"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_below="@id/app_bar"-->
    <!--android:src="@drawable/logo" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wallpaper3"
        android:scaleType="centerCrop"/>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:alpha="0.2"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        android:orientation="vertical"
        tools:context=".controller.Â .activities.MainLoginActivity">

        <!--<View-->
            <!--android:id="@+id/centerView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:background="#FFFFFF"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginTop="38dp"-->
            <!--/>-->


        <!-- User progress -->

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewSignLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            fab:cardBackgroundColor="#99000000"
            fab:cardElevation="4dp"
            fab:cardCornerRadius="4dp"
            >

            <LinearLayout
                android:id="@+id/linear_login_sign_form"
                android:layout_width="292dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_layout_button"
                android:paddingRight="@dimen/padding_layout_button"
                android:gravity="center"
                android:paddingBottom="30dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textinput_size"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewUserNameMain"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_action_account_box"
                        android:layout_marginBottom="12dp"
                        android:alpha="0.70" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/EditTextHintLight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textinput_size"
                        android:paddingLeft="@dimen/padding_edittext_bottom"
                        android:paddingRight="@dimen/padding_edittext_bottom"
                        android:paddingTop="@dimen/padding_input_top">

                        <EditText
                            android:id="@+id/editTextUsername"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_size"
                            android:hint="@string/prompt_username"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textSize="@dimen/textfield_textsize"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/textinput_size"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewPassword"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_action_lock"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:alpha="0.70" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/EditTextHintLight"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/textinput_size"
                        android:paddingLeft="@dimen/padding_edittext_bottom"
                        android:paddingRight="@dimen/padding_edittext_bottom"
                        android:paddingTop="@dimen/padding_input_top">

                        <EditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_size"
                            android:hint="@string/prompt_password"
                            android:imeActionId="@+id/userName"
                            android:imeActionLabel="@string/action_sign_in"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:paddingTop="@dimen/padding_edittext_top"
                            android:singleLine="true"
                            android:textSize="@dimen/textfield_textsize"
                            android:gravity="center_vertical"
                            android:textColor="@android:color/white"

                            />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSignLogin"
                    style="@style/ButtonStyle"
                    android:layout_width="250dp"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginTop="@dimen/vertical_padding_button"
                    android:elevation="2dp"
                    android:text="@string/action_sign_in"
                    android:fontFamily="sans-serif-medium"

                    />

                <Button
                    android:id="@+id/buttonSignOffline"
                    style="@style/ButtonStyle"
                    android:layout_width="250dp"
                    android:layout_height="@dimen/button_size"
                    android:layout_marginTop="@dimen/vertical_padding_button"
                    android:elevation="2dp"
                    android:text="@string/action_offline_version"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fabAddLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_margin="@dimen/fab_margin"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/accent_pressed"
            fab:fab_colorRipple="@color/ripple" />


    </RelativeLayout>

    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/app_bar"
        android:background="@drawable/toolbar_shadow" />

</RelativeLayout>